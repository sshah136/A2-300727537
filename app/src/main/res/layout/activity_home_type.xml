<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTypeActivity">

    <ImageView
        android:id="@+id/imgApt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/appartment"
        app:layout_constraintBottom_toTopOf="@+id/imgFullHome"
        app:layout_constraintTop_toTopOf="parent"

        android:scaleType="matrix" />

    <ImageView
        android:id="@+id/imgFullHome"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toTopOf="@+id/imgSemiHome"
        app:layout_constraintTop_toBottomOf="@+id/imgApt" />

    <ImageView
        android:id="@+id/imgSemiHome"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/semiHome"
        app:layout_constraintBottom_toTopOf="@+id/imgCondo"
        app:layout_constraintTop_toBottomOf="@+id/imgFullHome" />

    <ImageView
        android:id="@+id/imgCondo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/condominium"
        app:layout_constraintBottom_toTopOf="@+id/imgTown"
        app:layout_constraintTop_toBottomOf="@+id/imgSemiHome" />

    <ImageView
        android:id="@+id/imgTown"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/townhouse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCondo" />

</androidx.constraintlayout.widget.ConstraintLayout>